---
import "/src/styles/global.css";
import "@fontsource/poppins";
import { ClientRouter } from "astro:transitions";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";

const { title = "Adrián Palomo | Portfolio" } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="theme-color" content="#444444" />
    <meta
      name="description"
      content="Diccionario invertido, para buscar palabras a través de sus significados"
    />
    <meta
      name="keywords"
      content="diccionario invertido, palabras, significados, buscar palabras, significados de palabras"
    />
    <meta name="author" content="Adrián Palomo" />
    <meta name="robots" content="index, follow" />
    <!--     <link rel="canonical" href="https://adrianpalomo.com/" />
 -->
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <!--     <meta property="og:url" content="https://adrianpalomo.com/" />
 -->
    <meta property="og:title" content="Diccionario invertido" />
    <meta property="og:site_name" content="Diccionario invertido" />
    <meta
      property="og:description"
      content="Diccionario invertido, para buscar palabras a través de sus significados"
    />
    <!--  <meta property="og:image" content="https://www.adrianpalomo.com/og.webp" />
    <meta property="og:locale" content="es_ES" /> -->

    <!-- Apple -->
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta
      name="apple-mobile-web-app-status-bar-style"
      content="black-translucent"
    />
    <meta name="apple-mobile-web-app-title" content="Diccionario invertido" />

    <!-- Microsoft -->
    <meta name="msapplication-TileColor" content="#444444" />
    <meta name="msapplication-config" content="none" />

    <link rel="icon" type="image/png" href="/images/Favicon.webp" />
    <title>{title}</title>
    <ClientRouter />
  </head>
  <body class="bg-amber-50/70 flex justify-center">
    <div
      class="flex min-h-screen w-full max-w-xl flex-col gap-6 p-6 md:max-w-4xl lg:max-w-5xl xl:w-7xl xl:max-w-7xl "
    >
      <div class="flex h-[95px] w-full justify-center border">
        <Header />
      </div>
      <div class="mb-auto w-full flex justify-center border">
        <slot />
      </div>
      <div class="flex w-full justify-center border">
        <Footer />
      </div>
    </div>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    font-family: "Poppins", sans-serif;
  }
</style>
